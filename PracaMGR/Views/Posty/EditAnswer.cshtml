@model PracaMGR.Odpowiedzi

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Odpowiedz na post</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">          
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Tresc, new { rows = "6", cols = "50", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tresc)
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
                @Html.ActionLink("Wróć", "Odpowiedz", new { id = Model.Id_Post }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

