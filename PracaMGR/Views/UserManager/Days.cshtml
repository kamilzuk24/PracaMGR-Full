@model IEnumerable<PracaMGR.DniSwiateczne>
<br />
<p>
    @Html.ActionLink("Dodaj dzień świąteczny", "AddDay",null, new { @class = "btn btn-default"})
</p>
<table class="table">
    <tr>
        <th>
            Dzień
        </th>
        <th>
            Opis
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.data.ToShortDateString()
        </td>
        <td>
            @item.opis
        </td>
        <td>
            @Html.ActionLink("Edytuj", "EditDay", new { id=item.Id }, new { @class = "btn btn-default"})
            @Html.ActionLink("Usuń", "DeleteDay", new { id=item.Id }, new { @class = "btn btn-default", onclick = "return confirm('Na pewno chcesz usunąć Dzień świąteczny?')" })
        </td>
    </tr>
}

</table>
